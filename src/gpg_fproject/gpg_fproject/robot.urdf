<?xml version="1.0"?>
<robot name="gopigo3">

  <!-- ROS2 Control Configuration -->
  <gazebo>
    <plugin name="gz_ros2_control::GazeboSimROS2ControlPlugin" filename="gz_ros2_control-system">
      <parameters>$(find gpg_fproject)/controllers.yaml</parameters>
    </plugin>
  </gazebo>

  
  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>

    <joint name="left_wheel">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>  
    </joint>
    <joint name="right_wheel">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>  
    </joint>
    <joint name="servo">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
    <!--<sensor name="line">
      <state_interface name="level0"/>
      <state_interface name="level1"/>
      <state_interface name="level2"/>
      <state_interface name="level3"/>
      <state_interface name="level4"/>
    </sensor>
    <sensor name="battery">
      <state_interface name="voltage"/>
    </sensor>-->
  </ros2_control>

  <!-- Materials -->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <gazebo reference="base_link">
    <material>Gazebo/Orange</material>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
  </gazebo>

  <gazebo reference="right_wheel_link">
    <material>Gazebo/white</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

  <gazebo reference="left_wheel_link">
    <material>Gazebo/white</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

  <gazebo reference="servo_link">
    <material>Gazebo/Blue</material>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
  </gazebo>

  <gazebo reference="camera_link">
    <material>Gazebo/White</material>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <sensor type="camera" name="camera">
      <update_rate>30</update_rate>
        <always_on>true</always_on>
        <visualize>true</visualize>
        <topic>/image</topic>
        <pose>0 0 0 1.57 -1.57 0</pose>
        <gz_frame_id>camera_link</gz_frame_id>
      <camera name="camera">
        <camera_info_topic>/camera_info</camera_info_topic>
        <horizontal_fov>0.915</horizontal_fov>
        <image>
          <width>320</width>
          <height>240</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
        <distortion>
          <k1>0.080938</k1>
          <k2>-0.257429</k2>
          <k3>0.000000</k3>
        </distortion>
      </camera>
    </sensor>
  </gazebo>

  <gazebo reference="robot_support_link">
    <material>Gazebo/Orange</material>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
  </gazebo>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.005" radius="0.075"/>
      </geometry>
      <origin xyz="0 0 0.0375" rpy="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.005" radius="0.075"/>
      </geometry>
      <origin xyz="0 0 0.0375" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0.0375" rpy="0 0 0"/>
      <inertia ixx="0.00014083" ixy="0.0" ixz="0.0" iyy="0.00014083" iyz="0.0" izz="0.00028125"/>
    </inertial>
  </link>

  <!-- Right Wheel Link -->
  <link name="right_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.0375"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.0375"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00004948" ixy="0.0" ixz="0.0" iyy="0.00007031" iyz="0.0" izz="0.00004948"/>
    </inertial>
  </link>

  <!-- Right Wheel Joint -->
  <joint name="right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.062 0.0375" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Left Wheel Link -->
  <link name="left_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.0375"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.0375"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00004948" ixy="0.0" ixz="0.0" iyy="0.00007031" iyz="0.0" izz="0.00004948"/>
    </inertial>
  </link>

  <!-- Left Wheel Joint -->
  <joint name="left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.062 0.0375" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Servo Link -->
  <link name="servo_link">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.03"/> 
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.03 0.03 0.03"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0000075" ixy="0" ixz="0" iyy="0.0000075" iyz="0" izz="0.0000075"/>
    </inertial>
  </link>

  <!-- Servo Joint -->
  <joint name="servo" type="revolute">
    <parent link="base_link"/>
    <child link="servo_link"/>
    <origin xyz="0.075 0 0.065" rpy="0 0 0"/>
    <axis xyz="0 0 1"/> 
    <limit lower="-1.57" upper="1.57" effort="10" velocity="10"/>
  </joint>

  <!-- Camera Link -->
  <link name="camera_link"> 
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0000003333" ixy="0" ixz="0" iyy="0.0000003333" iyz="0" izz="0.0000003333"/>
    </inertial>
  </link>

  <!-- Camera Joint -->
  <joint name="camera" type="fixed">
    <parent link="servo_link"/>
    <child link="camera_link"/>
    <origin xyz="0.015 0 0" rpy="-1.57075 0 -1.57075"/>
  </joint>

  <!-- Robot Support Link -->
  <link name="robot_support_link">
    <visual>
      <geometry>
        <cylinder length="0.0375" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 -0.01875" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.0375" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 -0.01875" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 -0.01875" rpy="0 0 0"/>
      <inertia ixx="0.000008475" ixy="0.0" ixz="0.0" iyy="0.000008475" iyz="0.0" izz="0.0000025"/>
    </inertial>
  </link>

  <!-- Robot Support Joint -->
  <joint name="robot_support" type="fixed">
    <parent link="base_link"/>
    <child link="robot_support_link"/>
    <origin xyz="-0.065 0 0.0375" rpy="0 0 0"/>
  </joint>
  <!-- Gazebo Plugin -->
</robot>
